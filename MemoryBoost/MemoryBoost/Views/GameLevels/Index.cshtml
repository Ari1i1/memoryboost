@model IEnumerable<MemoryBoost.Models.GameLevel>

@{
    ViewData["Title"] = "Index";
}

<div style="background-color: #59F9CC; border-radius: 35px;" class="d-flex justify-content-center">
    <h4 style="color: #806CDD;" class="mt-2">choose the level</h4>
    <div class="row align-self-center">
        @foreach (var item in Model)
        {
        <div class="container col-4" style="border: #806CDD solid 3px; border-radius: 35px;">
                @Html.DisplayFor(modelItem => item.Name)
        </div>
        }
    </div>
</div>

